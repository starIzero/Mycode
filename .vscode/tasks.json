{
"version": "2.0.0",
"tasks": [
    {
        "type": "cppbuild",
        "label": "C/C++: g++.exe 生成活动文件",
        "command": "D:/ProgrammingApps/mingw64/bin/g++.exe",
        "args": [
            "-g",
            "${file}",
            "-o",
            "${fileDirname}\\output\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
]
}